{% extends 'base.html.twig' %}

{% block title %} Fiche Student{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    <h2>Fiche student [{{ student.prenom }} {{ student.nom }}] ✅</h2>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <td>Matricule de l'étudiant:</td>
                <td>{{ student.matricule }}</td>
            </tr>
            <tr>
                <td>Age de l'étudiant:</td>
                <td>{{ student.age }} ans</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <div id="carouselExampleIndicators" class="carousel slide"
            data-ride="carousel">
            <ol class="carousel-indicators">
                {% for image in student.images %}
                <li data-target="#carouselExampleIndicators"
                    data-slide-to="{{ loop.index0}}" class="{% if
                    loop.first %} active
                    {% endif %}"></li>
                {% endfor %}
            </ol>
            <div class="carousel-inner">
                {% for image in student.images %}
                <div class="carousel-item {% if loop.first %} active {%
                    endif %}">
                    <img class="d-block w-100" src="{{ image.url }}"
                        alt="First
                        slide">
                </div>
                {% endfor %}
                <div class="carousel-item">
                    <img class="d-block w-100" src="..." alt="Second
                        slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="..." alt="Third
                        slide">
                </div>
            </div>
            <a class="carousel-control-prev"
                href="#carouselExampleIndicators" role="button"
                data-slide="prev">
                <span class="carousel-control-prev-icon"
                    aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next"
                href="#carouselExampleIndicators" role="button"
                data-slide="next">
                <span class="carousel-control-next-icon"
                    aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

</div>
{% endblock %}
